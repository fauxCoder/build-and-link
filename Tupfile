# include definitions from Tuprules.tup
include_rules

INCLUDE_FLAGS = -I.

# compile the cpp's, invoking the compiler for each individual file
: foreach *.cpp |> $(CXX) -c %f -o %o $(INCLUDE_FLAGS) -std=c++17 |> %B.o

# link the o's + the static lib in a single invocation of the linker
: *.o help/help.a |> $(CXX) %f -o %o -lstdc++ |> example

# generate a .gitignore which ignores itself + any output files
.gitignore
